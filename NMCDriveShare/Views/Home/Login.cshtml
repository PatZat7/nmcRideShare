@model NMCDriveShare.Models.User


@{
    ViewBag.Title = "Login";
}

<div class="row">
    <h2 class="headers">Log in or Register</h2>
    @ViewBag.Message

</div>

<hr class="line" />

<body class="user-info">

    <h3 class="landingHeader">Log in</h3>
    <br />

    <div>


        @Html.LabelFor(m => m.nmcEmail, new { Class = "labelClass" })
        <br />
        @Html.TextBoxFor(m => m.nmcEmail, new { Class = "textBoxClass" })

        <br />
        @Html.LabelFor(m => m.password, new { Class = "labelClass" })
        <br />
        @Html.PasswordFor(m => m.password, new { Class = "textBoxClass" })

        <br />
        <br />
        <input class="buttons" type="submit" value="Log In" />
        <hr class="line" />

    </div>

    <div class="boxFormat">

        <h3 class="landingHeader">Register</h3>
        <br />




        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {


            @Html.LabelFor(m => m.lastName, new { Class = "labelClass" })
            <br />
            @Html.TextBoxFor(m => m.lastName, new { Class = "textBoxClass" })

            <br />

            @Html.LabelFor(m => m.phoneNumber, new { Class = "labelClass" })
            <br />
            @Html.TextBoxFor(m => m.phoneNumber, new { Class = "textBoxClass" })

            <br />
            @Html.LabelFor(m => m.nmcEmail, new { Class = "labelClass" })
            <br />
            @Html.TextBoxFor(m => m.nmcEmail, new { Class = "textBoxClass" })

            <br />
            @Html.LabelFor(m => m.password, new { Class = "labelClass" })
            <br />
            @Html.PasswordFor(m => m.password, new { Class = "textBoxClass" })

            <br />
            @Html.Label("Male", new { Class = "labelClass" })
            @Html.RadioButtonFor(m => m.gender, "Male", new { Class = "radioClass" })
            @Html.Label("Female", new { Class = "labelClass" })
            @Html.RadioButtonFor(m => m.gender, "Female", new { value = "Female", Class = "radioClass" })

            <br />
            <br />

            <input class="buttons" type="submit" value="Register" />

            <hr class="line" />

        }
    </div>





</body>